{
  "name": "@bookease/backend",
  "version": "1.0.16",
  "description": "The backend of textbook trading application using GraphQL",
  "main": "src/index.js",
  "scripts": {
    "web": "./node_modules/.bin/nodemon --config ./nodemon.web.json --debug=5858 --expose_debug_as=v8debug src/start.js",
    "start": "npm run web",
    "init:db": "./node_modules/.bin/babel-node src/tools/initDb.js",
    "init:run-dataloader": "./node_modules/.bin/babel-node src/tools/runDataLoader.js",
    "lint": "./node_modules/.bin/eslint src",
    "lint:fix": "./node_modules/.bin/eslint --fix src",
    "build": "./node_modules/.bin/babel src --out-dir build",
    "heroku:dataloader": "node src/tools/runDataloader.js",
    "docker:postgres": "docker run -p 5432:5432 -v `pwd`/tmp/postgres:/var/lib/postgresql/data -e POSTGRES_PASSWORD=mysecretpassword postgres:9.6",
    "docker:redis": "docker run -p 6379:6379 -v `pwd`/tmp/redis:/data redis:3.2.9",
    "docker:es": "docker run -p 9200:9200 -p 9300:9300 elasticsearch:2.4.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://aduyng@bitbucket.org/bookease/backend.git"
  },
  "author": "",
  "license": "UNLICENSED",
  "homepage": "https://bitbucket.org/bookease/backend#readme",
  "dependencies": {
    "apollo-server-express": "^1.1.0",
    "bluebird": "^2.10.2",
    "body-parser": "^1.17.2",
    "chance": "^1.0.11",
    "compression": "^1.6.0",
    "connect": "^3.4.0",
    "connect-redis": "^3.0.0",
    "cookie-parser": "^1.4.0",
    "cors": "^2.8.4",
    "csv": "^1.1.1",
    "express": "^4.13.3",
    "express-basic-auth": "^1.1.2",
    "express-session": "^1.11.3",
    "express-sslify": "^1.2.0",
    "fs-extra": "^4.0.1",
    "googleapis": "^21.3.0",
    "graphql": "^0.10.5",
    "lodash": "^4.6.1",
    "method-override": "^2.3.9",
    "nodemailer": "^4.1.0",
    "nodemailer-mailgun-transport": "^1.3.5",
    "pg": "^7.1.2",
    "pg-hstore": "^2.3.2",
    "redis": "^2.1.0",
    "sequelize": "^4.6.0",
    "throng": "^4.0.0",
    "twilio": "^3.6.6",
    "underscore.string": "^3.2.2",
    "validator": "^8.1.0",
    "winston": "^1.1.2",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-stage-0": "6.5.0",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.2.1",
    "nodemon": "^1.11.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "no-param-reassign": [
        "error",
        {
          "props": true,
          "ignorePropertyModificationsFor": [
            "memo",
            "keep",
            "remember"
          ]
        }
      ]
    }
  }
}
